t=int(input())
for i in range(t):
    n=int(input())
    x=list(map(int,input().split()))
    x1=sorted(x,reverse=True)
    ans=0
    y=len(x1)
    num=x1[y-1]
    num1=x1[0]
    ans1=num1-num
    for i in range(y-1):
        ans+=x1[i]-x1[i+1]
    print(ans+ans1)
        
        
        
        
